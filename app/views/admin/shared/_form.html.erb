<section class="content">
  <div class="row">
    <div class="col-sm-12">
      <div class="box box-info">
        <div class="box-header">
          <h3 class="box-title"><%= model_klass.model_name.human %></h3>
        </div>
        <%= form_with model: record, url: url, class: 'form-horizontal' do |f| %>
            <div class="box-body">
              <% controller.permitted_params.each do |field| %>
                  <div class="form-group">
                    <%= f.label field, class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                      <%= f.text_field field, class: 'form-control' %>
                    </div>
                  </div>
              <% end %>
            </div>
            <div class="box-footer">
              <%= link_to 'Cancel', record.admin_index_path, class: 'btn btn-default' %>
              <%= f.submit class: 'btn btn-primary' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
